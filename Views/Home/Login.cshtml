@{
    ViewData["Title"] = "Login";
}
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="d-flex flex-column vh-100">
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="col-md-4 bg-white p-4 rounded shadow">
            <h1 class="text-center text-success mb-3">
                BIENVENIDOS
            </h1>

            <div class="mb-3">
                <label for="correo" class="form-label text-success">Correo Institucional:</label>
                <input type="email" class="form-control border-bottom" id="correo" name="correo" placeholder="usuario@uabc.edu.mx" />
            </div>

            <div class="mb-4">
                <label for="cont" class="form-label text-success">Contraseña:</label>
                <input type="password" class="form-control border-bottom" id="cont" name="cont" placeholder="********" />
            </div>

            <a href="/Home/Inicio" class="btn btn-success w-100">Ingresar</a>
        </div>
    </div>
</body>
</html>