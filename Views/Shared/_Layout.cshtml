<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIPE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIPE.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (ViewData["Title"] != null && ViewData["Title"].ToString() == "Login")
        {
            <!-- Header específico para el Login -->
            <nav class="navbar  text-white p-3 position-relative">
                <!-- Imagen de fondo (Pleca Cuadrangular) -->
                <img src="https://i.ibb.co/CJkRzSH/Pleca-Cuadrangular.png"
                     alt="Pleca Cuadrangular" class="w-30" style="max-height: 80px;">
                <!-- Logos posicionados encima de la pleca -->
                <div class="position-absolute top-50 start-0 translate-middle-y d-flex align-items-center" style="margin-left: 20px;">
                    <!-- Logo SIPE y texto -->
                    <div class="d-flex align-items-center">
                        <img src="~/img/SIPE_blanco-removebg-preview.png" alt="Logo SIPE" style="max-height: 100px; margin-right: 10px;">
                        <span style="font-size: 1.5rem; color: white; font-weight: bold;">SIPE</span>
                    </div>
                </div>
            </nav>
        }
        else
        {
            <!-- Header genérico -->
            <nav class="navbar bg-light border-bottom p-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <img src="https://alumnos.uabc.mx/documents/20124/0/sipe-placeholder.png/1f973d75-ccdc-fdf1-8f45-57590a6b3fc5?t=1695397352567"
                             alt="SIPE Logo" class="me-3" style="max-height: 40px;">
                        <span class="h5 text-dark mb-0">Cédula de Potencial a Egresar</span>
                        <span class="ms-3">Contacto</span>
                    </div>
                    <div>
                        <span class="text-secondary">Campus: Mexicali</span>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        @if (ViewData["Title"] != null && ViewData["Title"].ToString() == "Login")
        {
            <!-- Footer específico para el Login -->
            <footer class="text-center" style="background-color: #B08208;">
                <div class="p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    <a href="https://correo.uabc.edu.mx" target="_blank" style="color: white; font-size: larger;">Correo UABC</a>
                    <span class="mx-3 text-white" style="font-size: larger;">|</span>
                    <a href="/privacy-policy" target="_blank" style="color: white; font-size: larger;">Política de Privacidad</a>
                </div>
            </footer>
        }
        else
        {
            <!-- Footer genérico -->
            <footer class="text-center text-lg-start" style="left: 0px; bottom: 0px; width: 100%; background-color: #B08208 !important;">
                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                    <p id="copyright-uabc" style="color: white;">UABC © 2024</p>
                </div>
            </footer>
        }
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
